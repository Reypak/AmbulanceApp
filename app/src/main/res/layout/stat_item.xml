<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp">

        <ImageView
            android:id="@+id/amb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_amb"
            app:tint="@color/red" />

        <TextView
            android:id="@+id/tvAmbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/amb"
            android:text="UBA 312N"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHosp"
            android:layout_alignTop="@id/tvAmbNo"
            android:layout_alignParentEnd="true"
            android:text="10:34am"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHosp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAmbNo"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/amb"
            android:gravity="center"
            android:text="Kansanga - Nsambya Hospital"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvUname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHosp"
            android:layout_toEndOf="@+id/amb"
            android:text="Matthew Mwesigwa"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>